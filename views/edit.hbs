  <div class="container">
       <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                    <h1>Welcome to add page</h1>
                    <form action="/edit" class="form" method="POST">
                        <input type="hidden" name="_id" value="{{doc._id}}">
                        <div class="form-group">
                                <input type="text" name="name" id="" placeholder="First Name" class="form-control" value="{{doc.name}}">
                        </div>
                        <div class="form-group">
                                <input type="text" name="stack" id="" placeholder="Eg. JavaScript Developer" class="form-control" value="{{doc.stack}}">
                        </div>
                        <div class="form-group">
                                <textarea type="text" name="message" id="" placeholder="message for me"  class="form-control">{{doc.stack}}</textarea>
                        </div>
                        <button class="btn btn-info" type="submit">Update</button>
                    </form>
                    <div class="text-center mt-5">
                         <a class="btn btn-danger" href="/"> <i class="fa fa-arrow-left"></i> Home</a>
                    </div>
            </div>
        <div class="col-lg-1"></div>
    </div>
</div>